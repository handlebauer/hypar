{
  "compilerOptions": {
    "checkJs": true,
    "noImplicitAny": true,
    "module": "es2022",
    "noImplicitThis": true,
    "target": "esnext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "noEmit": false,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "db.js"],
  "exclude": ["node_modules/**/*"]
}
